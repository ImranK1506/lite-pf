---
import {
  ReactIcon,
  VueIcon,
  AngularIcon,
  SvelteIcon,
  TailwindIcon,
  MaterialIcon,
  BootstrapIcon,
  BulmaIcon
} from "lucide-react";

const {project} = Astro.props;

// Map technologies to icons
const techIconMap = {
  react: <ReactIcon class = "w-6 h-6 text-sky-500" / >,
  vue: <VueIcon class = "w-6 h-6 text-green-500" / >,
  angular: <AngularIcon class = "w-6 h-6 text-red-600" / >,
  svelte: <SvelteIcon class = "w-6 h-6 text-orange-500" / >,
  tailwind: <TailwindIcon class = "w-6 h-6 text-teal-400" / >,
  material: <MaterialIcon class = "w-6 h-6 text-blue-500" / >,
  bootstrap: <BootstrapIcon class = "w-6 h-6 text-purple-500" / >,
  bulma: <BulmaIcon class = "w-6 h-6 text-green-600" / >,
};
---

<div
        class="card relative bg-gradient-to-r from-gray-800 via-gray-900 to-black p-6 rounded-lg shadow-lg border border-gray-700 hover:scale-105 transition-transform cursor-pointer group"
        data-title={project.title}
        data-url={project.url}
        data-description={project.description}
>
    <div class="space-y-4">
        <h2 class="font-heading text-2xl text-gray-100">{project.title}</h2>
        <div class="flex flex-wrap gap-2">
          {project.technologies.map((tech) => (
                  <div key={tech} class="flex items-center gap-1">
                    {techIconMap[tech] || <span class="text-gray-500">Icon missing</span>}
                      <span class="text-gray-300 capitalize">{tech}</span>
                  </div>
          ))}
        </div>
        <p class="font-body text-gray-400">{project.description}</p>
    </div>
</div>
