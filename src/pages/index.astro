---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';
---

<Layout title="Welcome to Astro.">
	<main class="relative w-full flex-col justify-start items-center pattern">
		<Navbar />
		<div class="hero min-h-screen bg-base-200">
			<div class="hero-content text-center">
				<div class="max-w-md">
					<h1 class="text-5xl font-bold">Welcome to My Portfolio</h1>
					<p class="py-6">I am a front-end developer specializing in modern web experiences.</p>
					<button class="btn btn-primary">Explore My Work</button>
				</div>
			</div>
		</div>
	</main>
	<Footer />
</Layout>

